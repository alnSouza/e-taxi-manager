<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_todaycard"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/alert_circle"/>

    <TextView
        android:id="@+id/messageAlert"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon"
        android:text="Dialogo sera exibido aqui?"
        android:textColor="@color/textColorDefault"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_gravity="center"/>

    <GridLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <Button
            android:id="@+id/cancelable"
            android:text="Cancelar"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="@color/cardColor"
            android:background="@color/material_on_surface_stroke"/>

        <Button
            android:id="@+id/proceed"
            android:text="Sim"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/colorAccent"
            android:background="@color/material_on_surface_stroke"/>


    </GridLayout>

</LinearLayout>