<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/month_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Janeiro"
        android:textSize="30dp"
        android:textColor="@color/cardColor"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Corridas:"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/races_r"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="19"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Valor Bruto:"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/receita_r"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="R$1000"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Combustivel:"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/fuel_r"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="R$ 300 / 80L"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Manutenção:"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/maintence_r"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="R$800"
            android:textSize="20dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Valor liquido:"/>

        <TextView
            android:id="@+id/liquidValue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="R$100"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary" />

    </GridLayout>



</LinearLayout>